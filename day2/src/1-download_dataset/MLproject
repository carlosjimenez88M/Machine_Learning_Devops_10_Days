name: mnist_downloader

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      output_artifact:
        description: Name of the output CSV file
        type: str
        default: "mnist_data.csv"
      artifact_name:
        description: Name for the W&B artifact
        type: str
        default: "mnist_dataset"
      artifact_type:
        description: Type of the W&B artifact
        type: str
        default: "raw_data"
    command: >-
      python main.py --output_artifact {output_artifact} \
                     --artifact_name {artifact_name} \
                     --artifact_type {artifact_type}