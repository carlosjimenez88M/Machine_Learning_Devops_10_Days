name: preprocess_data

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      input_artifact:
        type: str
        description: "Input artifact name from W&B (e.g., raw_data.csv:latest)"
      output_artifact:
        type: str
        default: "cleaned_data.csv"
        description: "Local path to save cleaned dataset"
      artifact_name:
        type: str
        default: "cleaned_data.csv"
        description: "Name of the output artifact to be logged"
      artifact_type:
        type: str
        default: "clean_data"
        description: "Type of the output artifact"
      artifact_description:
        type: str
        default: "Cleaned and preprocessed dataset"
        description: "Description of the output artifact"

    command: >-
      python main.py
      --input_artifact {input_artifact}
      --output_artifact {output_artifact}
      --artifact_name {artifact_name}
      --artifact_type {artifact_type}
      --artifact_description "{artifact_description}"
